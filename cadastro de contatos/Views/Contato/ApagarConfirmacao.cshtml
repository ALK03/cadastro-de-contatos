@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar Contato";

}

<div class="text-center"> 
    <h2>Realmente deseja apagar o contato @Model.Nome?</h2>
</div>

<div class="d-flex flex-column gap-1 mt-3">
    <a class=" btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
    <a class=" btn btn-danger btnc-block" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Excluir</a>
</div>